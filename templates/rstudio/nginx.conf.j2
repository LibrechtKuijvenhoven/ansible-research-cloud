map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}

server {
  listen 80;
  client_max_body_size 0;

  rewrite ^/rstudio/{{ project_name }}$ $scheme://$http_host/rstudio/{{ project_name }}/ permanent;

  location /rstudio/{{ project_name }}/ {
    
    rewrite ^/rstudio/{{ project_name }}/(.*)$ /$1 break;
    
    proxy_pass http://localhost:8787;
    proxy_redirect http://localhost:8787/ https://$http_host/rstudio/{{ project_name }}/;
    
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    proxy_read_timeout 20d;
  }
}
