map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}

server {
    listen 80 default_server;
    server_name _;

    return 301 {{ 'https://' + gateway_domain + '$request_uri' }};
}

server {
        server_name {{ gateway_domain }};
        listen 443 ssl http2 default_server;
        http2_push_preload on;

        ssl_certificate         {{ gateway_tls_cert_path + gateway_domain + '.crt' }};
        ssl_certificate_key     {{ gateway_tls_key_path + gateway_domain + '.key' }};
        ssl_stapling            on;
        resolver                1.1.1.1;

        error_page 404 /404.html;

        client_max_body_size 320M;

        location / {
            root /usr/share/nginx/html/docs-hpc;
            index index.html;
        }

        location ^~ /blog {
            alias /usr/share/nginx/html/datascience-blog;
            index index.html;
        }

{% for i in groups['jupyterhub'] %}
        location {{ '/jupyter/' + hostvars[i]['project_name'] }} {

            proxy_pass {{ 'http://' + hostvars[i]['inventory_hostname'] }};
            proxy_redirect off;
        
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
        }
{% endfor %}

{% for i in groups['rstudio'] %}
        location {{ '/rstudio/' + hostvars[i]['project_name'] + '/' }} {

            proxy_pass {{ 'http://' + hostvars[i]['inventory_hostname'] }};
            proxy_redirect default;
            proxy_read_timeout 20d;

            proxy_set_header Host $host;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
        }
{% endfor %}

{% for i in groups['shiny'] %}
        location {{ '/shiny/' + hostvars[i]['project_name'] }} {

            proxy_pass {{ 'http://' + hostvars[i]['inventory_hostname'] + ':8080' }};
            proxy_redirect default;
            proxy_buffering off;
            proxy_read_timeout 20d;
            
            proxy_set_header Host $host;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
        }
{% endfor %}

        location /{{ hostvars[groups['rstudio_connect'][0]]['project_name'] }}/ {
            proxy_pass {{ 'http://' + hostvars[groups['rstudio_connect'][0]]['inventory_hostname'] }};
            proxy_redirect / /{{ hostvars[groups['rstudio_connect'][0]]['project_name'] }}/;
            proxy_read_timeout 20d;
            proxy_buffering off;
            
            proxy_set_header Host $host;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
            proxy_set_header X-RSC-Request $scheme://$host:$server_port$request_uri; 
        }
}
