map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}

server {
  listen 8080;
  client_max_body_size 0;
  
  rewrite ^/shiny/{{ project_name }}$ $scheme://$http_host/shiny/{{ project_name }}/ permanent;
  
  location /shiny/{{ project_name }}/ {
    rewrite ^/shiny/{{ project_name }}/(.*)$ /$1 break;
    
    proxy_pass http://localhost:3838;
    proxy_redirect / $scheme://$http_host/shiny/{{ project_name }}/;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    proxy_read_timeout 20d;
    proxy_buffering off;
  }
}
